<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card">

    <ImageView
        android:id="@+id/image_dishes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"/>

    <View
        android:id="@+id/palliate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/image_dishes"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/title_dishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/palliate"
        android:layout_alignTop="@id/palliate"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/Cornsilk"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_dishes"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/LightYellow"
        android:textStyle="normal" />


</merge>